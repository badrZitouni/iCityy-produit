    }
    
    </style>
</head>
<body>

   <div class="main" >
    <!-- Contenu de la classe main -->

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        
    {{ form_start(form, {'attr': {'class': 'register-form', 'novalidate': 'novalidate'}}) }}
    <div class="form-group">
        <label for="{{ form.nom.vars.id }}"><i class="zmdi zmdi-account material-icons-name"></i></label>
        {{ form_widget(form.nom, {'attr': {'placeholder': 'Nom'}}) }}
    </div>
    <div class="form-group">
        <label for="{{ form.prenom.vars.id }}"><i class="zmdi zmdi-account material-icons-name"></i></label>
        {{ form_widget(form.prenom, {'attr': {'placeholder': 'Prénom'}}) }}
    </div>
    <div class="form-group">
        <label for="{{ form.numtel.vars.id }}"><i class="zmdi zmdi-phone"></i></label>
        {{ form_widget(form.numtel, {'attr': {'placeholder': 'Numéro de téléphone'}}) }}
    </div>
    <div class="form-group">
        <label for="{{ form.email.vars.id }}"><i class="zmdi zmdi-email"></i></label>
        {{ form_widget(form.email, {'attr': {'placeholder': 'nom@gmail.com'}}) }}
          {% if form_errors(form.email) %}
    <div class="alert alert-danger">
        {{ form_errors(form.email) }}
    </div>
{% endif %}
    </div>
    <div class="form-group">
        <label for="{{ form.password.vars.id }}"><i class="zmdi zmdi-lock"></i></label>
        {{ form_widget(form.password, {'attr': {'placeholder': 'Mot de passe'}}) }}
              {% if form_errors(form.password) %}
    <div class="alert alert-danger">
        {{ form_errors(form.password) }}
    </div>
        {% endif %}
    </div>
    <div class="form-group">
        <label for="{{ form.image.vars.id }}"><i class="zmdi zmdi-book-image"></i></label>
        {{ form_widget(form.image) }}
    </div>
    <div class="form-group form-button">
    {{ form_widget(form.Soumettre) }}
</div>
{{ form_end(form) }}

                    </div>
                    <div class="signup-image">
                        <figure><img src="{{ asset('assets/images/signin-image.jpg') }}" alt="sing up image"></figure>
                        <a href="{{ path('app_login')}}">I am already member</a>
                    </div>
                </div>
            </div>
        </section>
